<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyundai.app.guide.GuideMapper">

    <!--    @author 황수영  -->
    <!--    @since 2024/03/09  -->
    <!--    가이드 관련 mapper  -->
    <select id="getGuideAll" >
        SELECT id
            , guide_type AS guideType
            , korean
        FROM guide
    </select>

    <select id="getHashtagCategoryAll" >
        SELECT title
            , korean
        FROM hashtag_category
    </select>

</mapper>